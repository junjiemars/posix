#### -*- mode:sh -*- vim:ft=sh
####
## No More than a C build system for clang, gcc and msvc.
## https://github.com/junjiemars/nore
####
## check posix features
####


if [ -z "$POSIX_ROOT" ]; then
  POSIX_ROOT="$(pwd)"
  flag="POSIX_ROOT" op=":=" value="$POSIX_ROOT" . ${NORE_ROOT}/auto/make_define
fi

# check for <ncc.h>
ncc_cpu_endian="yes"
ncc_cache_line_size="yes"
ncc_sanitize_address="yes"
ncc_sanitize_alignment="yes"
ncc_sanitize_leak="yes"
ncc_sanitize_signed_integer_overflow="yes"
ncc_omit_frame_pointer="yes"
ncc_no_omit_frame_pointer="yes"
ncc_pic="yes"
. ${POSIX_ROOT}/ncc_auto

# check for <npstd.h>
. ${POSIX_ROOT}/npstd_auto

# check for <ndef.h>
ndef___func__="yes"
ndef_bool="yes"
ndef_alignof="yes"
ndef_alignas="yes"
ndef_complex="yes"
ndef_generic="yes"
ndef_restrict="yes"
ndef_static_assert="yes"
ndef_stdbool="yes"
ndef_va_args="yes"
. ${POSIX_ROOT}/ndef_auto

# check for <nstr.h>
nstr_strdup="yes"
nstr_strerror_r="yes"
nstr_strtok_r="yes"
. ${POSIX_ROOT}/nstr_auto

# check for <nint.h>
nint_stdint="yes"
nint_inttypes="yes"
. ${POSIX_ROOT}/nint_auto

# check for <nustd.h>
nustd_gettimeofday="yes"
nustd_getpid="yes"
nustd_sleep="yes"
nustd_ssize_t="yes"
. ${POSIX_ROOT}/nustd_auto

# checking for <nlim.h>
nlim_clk_tck="yes"
nlim_line_max="yes"
nlim_pagesize="yes"
nlim_path_max="yes"
nlim_times="yes"
. ${POSIX_ROOT}/nlim_auto

# check for <nio.h>
nio_getdelim="yes"
nio_fileno="yes"
nio_fdopen="yes"
nio_libgen="yes"
nio_popen="yes"
. ${POSIX_ROOT}/nio_auto


# eof
